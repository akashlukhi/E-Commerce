<p class="sign" align="center"><h2>Admin Login</h2></p>
<form asp-controller="Home" asp-action="Admin" method="post" class="mt-3">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-5">
            <input type="Email" class="form-control" name="name" placeholder="Email Id">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-5">
            <input type="Password" class="form-control" name="password" placeholder="password">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
    </div>
</form>